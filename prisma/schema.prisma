generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiaryPost {
  id Int @default(autoincrement()) @id
  content String
  emotion String
  createdAt DateTime @default(now())
}

model ToDo {
  id Int @default(autoincrement()) @id
  todo String
}

model ChatHistory {
  id Int @default(autoincrement()) @id
  period Int
  prompt String
  response String
  createdAt DateTime @default(now())
}