generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiaryPost {
  id Int @default(autoincrement()) @id
  content String
  emotion String
  createdAt DateTime @default(now())
}

model ChatHistory {
  id        Int       @id @default(autoincrement())
  period    Int
  prompt    String
  response  String
  createdAt DateTime  @default(now())
  todos     ToDo[]    // 1対多の関係
}

model ToDo {
  id        Int       @id @default(autoincrement())
  todo      String
  createdAt DateTime  @default(now())  // 作成日時を追加
  chat      ChatHistory? @relation(fields: [chatId], references: [id]) // SET_NULL を表現
  chatId    Int?        // 外部キーを追加
}